{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "examples/plugins/logging-plugin.ts", "examples/plugins/performance-plugin.ts"],
  "exclude": ["node_modules", "dist", "examples", "tests"]
}
